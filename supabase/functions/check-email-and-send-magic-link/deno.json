{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["es2022", "dom", "deno"],
    "strict": false,
    "skipLibCheck": true,
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strictNullChecks": false
  },
  "include": ["index.ts", "deno.d.ts"],
  "exclude": ["node_modules"]
}
